{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["ES2018"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "types"
  ]
}
